<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reinitialiser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/logo_background"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="MODIFICATION MOT DE PASSE"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Veuillez saisir votre Email" />


        <EditText
            android:id="@+id/editTextTextEmailAddress3"
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:inputType="textEmailAddress"/>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Vous avez 60 secondes pour entrer le mot de passe envoyÃ© par mail" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Mot de passe"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/confirmation"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="Confirmer" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
