<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterLed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/logo_background" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="AJOUTER DES LEDS"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPassword5"
                android:layout_width="268dp"
                android:layout_height="47dp"

                android:ems="10"
                android:hint="NuméroSérie Led1"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ajouter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPassword4"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="NuméroSérie Led2"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ajouter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPassword8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="NuméroSérie Led3"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ajouter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="202dp"
                android:layout_height="61dp"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:text="Veuillez remplir le numéro de série de vos lEDS afin de les enregistrer sur votre compte"
                android:textStyle="bold" />

            <Button
                android:id="@+id/confirmer4"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:text="CONFIRMER" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>